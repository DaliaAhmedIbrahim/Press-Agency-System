
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width initial-scale=1.0" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top  sidebar-navbar-inverse">
        <div class="container sidebar-navbar-container">

            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        <div class="">

        </div>
        <a href="~/Views/Shared/FactoryLayout.cshtml"></a>

    </div>
    <div class="sidebar-layout">

        <div class="sidebar-aside-content">
            <!-- Content of sidebar -->
            <ul class="sidebar-nav">
                <li>@Html.ActionLink("Profile", "ViewInformation/", new { id = Session["Id"] }, "Editor")</li>
                <li>@Html.ActionLink("Create new post", "CreatePost/", new { id = Session["Id"] }, "Editor")</li>
                <li>@Html.ActionLink("My posts", "ViewPosts/", new { id = Session["Id"] }, "Editor")</li>
                <li>@Html.ActionLink("Received Questions", "ShowQuestions", "Editor")</li>
            </ul>
        </div>

        <div class="container body-content  sidebar-body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My Press Agency System</p>
            </footer>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
